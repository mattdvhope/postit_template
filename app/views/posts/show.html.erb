<% if logged_in? %>
  <p class='pull-right'>
    [<%= link_to 'edit this post', edit_post_path(@post) %>]
  </p>
<% end %>

<%= render @post.categories %>

<%= render 'shared/content_title', title: @post.title %>

<p><%= @post.description %></p>
<hr/>
<p><%= @post.url %></p></br>
<hr/>

<% if logged_in? %>
  <%= form_for [@post, @comment] do |f| %>
    <%= render 'shared/errors', obj: @comment %>
    <div class='control-group'>
      <%= render 'shared/content_title', title: 'Leave a comment:' %>
      <%= f.text_area :content, rows: 3, :class => 'span4' %>
    <br/>
    <%= f.submit "Create Comment", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>

<h5>Comments:</h5>


<% @post.comments.each do |comment| %>
<div class="row">
  <div class='span0 well text-center'>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    <br/>
    <%= comment.total_votes %> votes
    <br/>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
      <i class='icon-arrow-down'></i>
    <% end %>
    <br/>
  </div>
  <div class="well span8">
    <em>"<%= comment.content %>"</em>
    <br/>
    <span class="quiet">posted by</span> <%= comment.creator.username %>
    <small>at <%= display_datetime(comment.created_at) %></small>
  </div>
</div>
<% end %>


















