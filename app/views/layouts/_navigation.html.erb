<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <li>
    <div class="btn-group nav_item"> <!-- Categories dropdown -->
      <%= link_to '#', class: "btn dropdown-toggle", 'data-toggle' => 'dropdown' do %>
        Categories <span class="caret"></span>
      <% end %>
      <ul class="dropdown-menu">
      <% Category.all.each do |category| %>
        <li>
          <%= link_to category.name, category_path(category)  %>
        </li>
      <% end %>
    
        <% if logged_in? && current_user.admin? %>
          <li class="divider"></li>
          <li>
            <%= link_to new_category_path do %>
              <i class="icon-plus"></i>
              New Category
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </li>

  <% if logged_in? %>
    <li>
      <div class='nav_item'>
        <%= link_to 'New Post', new_post_path, class: 'btn btn-success <btn->   </btn->small' %>
      </div>
    </li>
    <li>
      <div class="btn-group nav_item"> <!-- User/Creator dropdown -->
        <%= link_to '#', class: "btn dropdown-toggle", 'data-toggle' => 'dropdown' do %>
          <%= current_user.username %> <span class="caret"></span>
        <% end %>
        <ul class="dropdown-menu">
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <i class= 'icon-pencil'></i>
              edit profile
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user) do %>
              <i class='icon-user'></i>
              view profile
            <% end %>
          </li>
          <li>
            <%= link_to logout_path do %>
              <i class='icon-circle-arrow-left'></i>
              logout
            <% end %>
          </li>
        </ul>
      </div>

    </li>

  <% else %>
    <li>
      <div class='nav_item'>
        <%= link_to 'Register', register_path, class: 'btn btn-primary' %>
      </div>
    </li>
    <li>
      <div class='nav_item'>
        <%= link_to 'Log in', login_path, class: 'btn btn-success' %>
      </div>
    </li>
  <% end %>
</ul>
